<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".ListingActivity">

        <TextView
            android:id="@+id/activity_listing_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Weng House"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/activity_listing_tv_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:fontFamily="@font/poppins"
            android:text="Pasay City, Manila, Philippines" />

        <ImageView
            android:id="@+id/activity_listing_iv_image"
            android:layout_width="match_parent"
            android:layout_height="216dp"
            android:layout_margin="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/room" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/activity_listing_tv_totalOccupancy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/poppins"
                android:gravity="center"
                android:text="2 Guest"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/activity_listing_tv_totalBedrooms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/poppins"
                android:gravity="center"
                android:text="2 Beds"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/activity_listing_tv_totalBathrooms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/poppins"
                android:gravity="center"
                android:text="1 Bathroom"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/activity_listing_tv_pricePerMonth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Php 15,000 / Month"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/activity_listing_tv_descriptionListing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:fontFamily="@font/poppins"
            android:text="Guests will be allocated on the ground floor according to availability. You get a comfortable two bedroom apartment has a true city feeling. The price qouted is for two guest, at the guest slot please mark the number of guests to get the exact price for groups. The guests will be allocated ground floor according to availability. You get the comfortable two bedroom apartment that has a true city feeling." />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Location on Map"
            android:textSize="20sp" />


        <WebView
            android:id="@+id/activity_listing_webview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/activity_listing_iv_profilePicture"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="0"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/Circular"
                android:src="@drawable/profile1" />

            <TextView
                android:id="@+id/activity_listing_tv_owner_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_semibold"
                android:text="Hosted by Cervales"
                android:textSize="20sp" />
        </LinearLayout>

        <Button
            android:id="@+id/activity_listing_btn_check_profile"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="100dp"
            android:background="@drawable/button_g"
            android:fontFamily="@font/inter"
            android:text="Check Profile"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>

</ScrollView>